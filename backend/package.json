{
  "name": "workflow-management-app",
  "version": "0.1.0",
  "description": "An application to help customize workflows and indicate deadline, stakeholders and prioritization of tasks with Messaging tools and Approval pane",
  "repository": {
    "type": "git",
    "url": "https://github.com/ThriledLokki983/workflow-management-app"
  },
  "author": "Gideon Nimoh",
  "license": "MIT",
  "scripts": {
    "start": "npm run serve",
    "build": "npm run build-sass && npm run build-ts && npm run lint && npm run copy-static-assets",
    "serve": "node dist/server.js",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "jest --forceExit --detectOpenHandles --coverage --verbose false",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.12",
    "@types/express-mongo-sanitize": "^2.1.0",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^4.0.0",
    "@types/hpp": "^0.2.2",
    "@types/html-to-text": "^8.0.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/logger": "^0.0.0",
    "@types/lusca": "^1.7.0",
    "@types/nodemailer-smtp-transport": "^2.7.5",
    "@types/pug": "^2.0.5",
    "@types/stripe": "^8.0.417",
    "@types/validator": "^13.6.3",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-mongo-sanitize": "^2.1.0",
    "express-rate-limit": "^5.5.0",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "html-to-text": "^8.0.0",
    "husky": "^4.2.3",
    "jsonwebtoken": "^8.5.1",
    "lint-staged": "^10.0.8",
    "lodash": "^4.17.15",
    "logger": "^0.0.1",
    "lusca": "^1.7.0",
    "mongodb-memory-server": "^6.3.1",
    "mongoose": "^5.11.15",
    "nodemailer": "^6.4.3",
    "nodemailer-smtp-transport": "^2.7.4",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "pug": "^3.0.2",
    "stripe": "^8.184.0",
    "validator": "^13.6.0",
    "winston": "^3.2.1",
    "xss-clean": "^0.1.1"
  },
  "devDependencies": {
    "@types/concurrently": "^4.1.1",
    "@types/errorhandler": "^0.0.32",
    "@types/eslint": "^6.1.8",
    "@types/express": "^4.17.2",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.28",
    "@types/node-sass": "^4.11.0",
    "@types/nodemailer": "^6.4.4",
    "@types/passport": "^1.0.2",
    "@types/passport-local": "^1.0.33",
    "@types/supertest": "^2.0.8",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^5.3.0",
    "concurrently": "^5.1.0",
    "eslint": "^6.8.0",
    "jest": "^27.3.1",
    "nodemon": "^1.19.4",
    "supertest": "^4.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^8.6.2",
    "typescript": "^3.8.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,jsx,ts,tsx}": [
      "npx prettier --write",
      "eslint --fix"
    ]
  }
}
